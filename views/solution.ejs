<script src="https://cdn.tailwindcss.com"></script>
<body class="bg-gradient-to-br from-yellow-100 to-pink-100 min-h-screen flex flex-col items-center p-8">
    <h1 class="text-4xl font-bold text-orange-600 mb-8">Welcome to Indian Culture App ðŸ‡®ðŸ‡³</h1>
    <form action="/submit" method="post" class="mb-8">
 <button type="submit" class="px-6 py-3 bg-orange-500 hover:bg-orange-600 text-white font-semibold rounded-lg shadow-lg">
 Get Random Content
 </button>
 </form>
 <% if (quote) { %>
 <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md mb-6">
 <h2 class="text-2xl font-semibold text-green-700 mb-2">Quote of the Day</h2>
 <p class="text-gray-700"><%= quote %></p>
 </div>
 <% } %>
  <% if (recipe.name) { %>
 <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md mb-6">
 <h2 class="text-2xl font-semibold text-red-600 mb-2">Recipe</h2>
 <p class="text-lg font-bold text-gray-800 mb-2"><%= recipe.name %></p>
 <p class="text-gray-700 mb-2"><strong>Ingredients:</strong> 
    <%= recipe.ingredients.join(", ") %></p>
<p class="text-gray-700"><strong>Steps:</strong> <%= recipe.steps %></p>
 </div>
<% } %>
 <% if (festival.name) { %>
 <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
 <h2 class="text-2xl font-semibold text-purple-700 mb-2">Festival</h2>
 <p class="text-lg font-bold text-gray-800 mb-2"><%= festival.name %></p>
 <p class="text-gray-700 mb-2"><strong>Date:</strong> <%= festival.date %></p>
 <p class="text-gray-700"><strong>Description:</strong> <%= festival.description %></p>
 </div>
 <% } %>
</body>
